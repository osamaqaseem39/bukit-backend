## Backend API gateway (apps/api)
## Base URL used by the frontend:
##   Production: https://bukit-backend.vercel.app
##   Local dev:  http://localhost:3000
#
# Port for the API gateway (apps/api/main.ts)
PORT=3000

# Downstream service URLs for the proxy (apps/api)
AUTH_SERVICE_URL=http://localhost:3001
GAMING_SERVICE_URL=http://localhost:3002

## Shared database configuration (used by auth & gaming services)
# For local Postgres, keep localhost values.
# For Supabase, replace these with your Supabase connection details.
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=bukit_db
# Enable SSL for Supabase Postgres (true/false)
DB_SSL=false

## Authentication / JWT
JWT_SECRET=change-me-in-production
JWT_EXPIRATION=3600s
# Number of days before a refresh token expires
JWT_REFRESH_EXPIRATION_DAYS=7

## Node environment
NODE_ENV=development

## CORS configuration (allowed frontend origins)
# Local web app
CORS_ORIGIN_WEB=http://localhost:3000
# Local admin dashboard
CORS_ORIGIN_ADMIN=http://localhost:5173
# Deployed admin dashboard
CORS_ORIGIN_ADMIN_PROD=https://bukit-dashboard.vercel.app

